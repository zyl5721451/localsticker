<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/inactiveAddButtonColor"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_enter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_toLeftOf="@+id/fl_right"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:id="@+id/fl_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginRight="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="ContinueToUse"
                        android:textColor="@color/ggray"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="FunnySticker"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>


        </FrameLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:minHeight="50dp"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AdAttribution"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:text="直播平台" />


            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12sp"
                tools:text="介绍个啥" />


            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                android:layout_width="250dp"
                android:layout_height="175dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        tools:text="4.5"
                        android:textSize="12sp" />
                    <RatingBar
                        android:id="@+id/ad_stars"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:isIndicator="true"
                        android:layout_marginLeft="20dp"
                        android:numStars="5"
                        android:stepSize="0.5"
                        tools:rating="4" />
                    <TextView
                        android:id="@+id/ad_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="20dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        tools:text="免费"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>



            <TextView
                android:id="@+id/ad_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                tools:text="googleplay" />

            <Button
                android:id="@+id/ad_call_to_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gnt_white"
                android:layout_gravity="bottom"
                android:background="@color/gnt_blue"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="15dp"
                tools:text="安装" />



            <TextView
                android:id="@+id/ad_advertiser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
