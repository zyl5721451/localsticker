<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="60dp"
            tools:src="@drawable/sticker_3"
            android:layout_height="60dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_name"
                android:textColor="@color/Blk_1"
                android:textSize="14dp"
                android:layout_alignParentTop="true"
                tools:text="Smart Funny"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_author"
                    android:textColor="@color/Green_1"
                    android:textSize="10dp"
                    tools:text="Smart Funny"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_size"
                    android:textColor="@color/Blk_3"
                    android:textSize="10dp"
                    tools:text="120kb"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_share_to"
            android:layout_marginRight="10dp"
            android:textColor="@color/Green_1"
            android:textSize="12dp"
            android:text="Send to friends" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_add_to"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Blk_12"
            android:textSize="12dp"
            android:text="Share to WhatsApp" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_ad"
        android:layout_width="match_parent"
        android:layout_marginTop="9dp"
        android:background="@color/green"
        android:layout_height="60dp"/>

</LinearLayout>